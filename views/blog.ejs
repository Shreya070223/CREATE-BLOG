<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partial/head") %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
</head>
<body>
    <%- include("./partial/nev1") %>
     
       <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img class="mt-3" src="<%= blog.coverImageUrl %>" width="800px">
        <pre class="mt-3"><%= blog.body %></pre>
       </div>

       <div class="container mt-4">
        <img src="<%= blog.createdBy.profilePhotoUrl %>" width="50px"> <%= blog.createdBy.fullname %>
       </div>

       <div class="container mt-3">
        <h1>Comment (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
           <form action="/blog/comment/<%= blog._id %>" method="POST">
              <div class="mb-3">
                <input type="text" name="content" class="form-control" placeholder="enter your comment">
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </fieldset>
          </form> 
        <% } %>
       </div>

       <div class="container mt-3">
        <% comments.forEach(comment=>{%>
            <div>
                <img src="<%= comment.createdBy.profilePhotoUrl %>" width="40px"> <%= comment.createdBy.fullname %>
                <pre><%= comment.content %></pre>
            </div>

       <% }) %>
       </div>

    <%- include("./partial/script") %>
</body>
</html>